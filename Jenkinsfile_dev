pipeline {
    agent any
    
    environment {
        TAG_DYNAMIC = "${env.GIT_BRANCH.replaceFirst('^origin/', '')}-${env.BUILD_ID}"
    } 
       
    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }

        stage('Clone Git Repo') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
            sh 'npm install'
            }
        }

        stage('Check code formatting') {
            steps {
            sh 'npm run lint'
            }
        }

        stage('Run Application Testing') {
            steps {
            sh 'nohup npm run start:test &'
            sh 'npm run test'
            }
        }

        stage('Testing Completed') {
            steps {
                echo 'Testing Completed...'
            }
        }

        stage('Build Image') {
            steps {
                sh '''
                    docker build -t magarp0723/blog-service .
                    docker compose up -d
                '''
            }
        }

        stage('Push Image') {
            steps {
                echo 'Building..'
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', passwordVariable: 'PASSWORD', usernameVariable: 'USERNAME')]) {
                        sh "docker login -u ${USERNAME} -p ${PASSWORD}"
                        sh "docker tag magarp0723/2244_ica2 magarp0723/blog-service:${TAG_DYNAMIC}"
                        sh "docker push magarp0723/blog-service:${TAG_DYNAMIC}"
                        sh "docker push magarp0723/blog-service"
                    }
            }
        }

        stage('Image push completed'){
            steps {
                echo 'Completed...'
            }
        }
 
    }
}